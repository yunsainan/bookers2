<div class="container px-5 px-sm-0">
  
  <div id="error_explanation">
    <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
       <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      
      <%# user info  new book %>
      <%= render 'list', user: @user, book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      
      <%# users index %>
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
        <% @users.each do |users|%>
        <tbody>
          <tr>
            <td>
              <%= image_tag users.get_profile_image(80, 80) %>
            </td>
            <td>
              <%= users.name %>
            </td>
            <td>
              <%= link_to "show", user_path(users.id) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>