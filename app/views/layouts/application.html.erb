<!DOCTYPE html>
<html>
  <head>
    <title>Bookers!</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
   <%# ヘッター部分 %>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
     <div class="container">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <span>Bookers</span>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                     aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li>
         <%#ログイン時の自分の投稿一覧%>
         <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
          <i class="fas fa-home"></i>
          Home
         <% end %>
        </li>
        <li>
         <%= link_to users_path, class: 'nav-link text-light' do %>
           <i class="fas fa-users"></i>
           Users
         <% end %>
        </li>
        <li>
         <%= link_to books_path, class: 'nav-link text-light' do %>
           <i class="fas fa-book-open"></i>
          Bookes
         <% end %>
        </li>
        <li>
         <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
           <i class="fas fa-sign-out-alt"></i>
          Log out
         <% end %>
        </li>
      <% else %>
        <li>
         <%= link_to root_path, class: 'nav-link text-light' do %>
          <i class="fas fa-home"></i>
           Home
          <% end %>
        </li>
        <li>
         <%= link_to about_path, class: 'nav-link text-light' do %>
          <i class="fas fa-link"></i>
           About
          <% end %>
        </li>
        <li>
         <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
          <i class="fas fa-user-plus"></i>
          Sign up
          <% end %>
        </li>
        <li>
         <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
          <i class="fas fa-sign-in-alt"></i>
           Log in
          <% end %>
        </li>
      <% end %>
       </ul>
      </div>
     </div>
    </nav>
   </header>
   <%# メイン %>
   <main>
    <p id="notice"><%= flash[:notice] %></p>
    <%= yield %>
   </main>
   <%# フッター %>
   <footer>
    <div class="container mt=5">
     <div class="row">
      <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
      </div>
     </div>
    </div>
   </footer>
  </body>
 </html>